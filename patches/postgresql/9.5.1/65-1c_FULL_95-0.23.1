+					(errcode(ERRCODE_INVALID_ESCAPE_SEQUENCE),
+					errmsg("invalid escape string"),
+					errhint("Escape string must be empty or one character.")));
+	}
+
+	/*
+	 * Look explanation of following in ./utils/adt/regexp.c
+	 */
+	r = result;
+
+	*r++ = UCharStar;
+	*r++ = UCharStar;
+	*r++ = UCharStar;
+	*r++ = UCharDotDot;
+	*r++ = UCharUp;
+	*r++ = UCharLBracket;
+	*r++ = UCharQ;
+	*r++ = UCharDotDot;
