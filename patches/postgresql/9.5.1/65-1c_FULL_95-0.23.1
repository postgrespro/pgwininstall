+		MkUChar( UCharUnderLine, '_' );			\
+		MkUChar( UCharStar, '*' );				\
+		MkUChar( UCharDotDot, ':' );			\
+		MkUChar( UCharUp, '^' );				\
+		MkUChar( UCharLBracket, '(' );			\
+		MkUChar( UCharQ, '?' );					\
