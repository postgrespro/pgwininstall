+		} else if ( *p == UCharPercent ) {
+			*r++ = UCharDot;
+			*r++ = UCharStar;
+		} else if ( *p == UCharUnderLine ) {
+			*r++ = UCharDot;
+		} else if ( *p == UCharBackSlesh || *p == UCharDot || *p == UCharQ || *p == UCharLFBracket ) {
+			*r++ = UCharBackSlesh;
+			*r++ = *p;
+		} else
+			*r++ = *p;
+
